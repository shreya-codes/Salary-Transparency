<div class="row mt-5">
  <div class="col-md-6 m-auto" id="box">
    <div class="card card-body" id="rightBox">
      
      <p class="fontA">Salary Transparency</p>
      <br><br> <br><br>
      <%- include ("./partials/messages"); %>
      <form action="/users/login" method="POST" id="texts">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div><br>
        <button type="submit" class="btn btn-primary btn-block" id="login">Login</button>
      </form>
      <p class="lead mt-4" id="texts">
        No Account?<hr>
        <div class="btn" id="register"><a href="/users/register">Register</a></div>
      </p>
    </div>
  </div>
</div>